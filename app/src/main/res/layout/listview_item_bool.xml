<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/boolNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="bool_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Dark_Gray" />

    <TextView
        android:id="@+id/boolMandatoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/boolNameTextView"
        android:text="@string/mandatory_star"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/boolValueSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/boolNameTextView"
        android:entries="@array/boolean_values"
        android:textColor="@color/Dark_Gray" />

</RelativeLayout>