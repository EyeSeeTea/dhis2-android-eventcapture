<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/letterNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="letter_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Dark_Gray" />

    <TextView
        android:id="@+id/letterMandatoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/letterNameTextView"
        android:text="@string/mandatory_star"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000"
        android:visibility="invisible" />
    
    <EditText
        android:id="@+id/letterValueEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/letterNameTextView"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/Dark_Gray" >
    </EditText>

</RelativeLayout>
