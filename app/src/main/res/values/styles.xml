<resources>
  <style name="EditTextSelector" parent="@android:style/TextAppearance.Medium">
    <item name="android:padding">4dp</item>
    <item name="android:textSize">18dp</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#FFCBCBCB</item>
    <item name="android:typeface">monospace</item>
    <item name="android:layout_marginBottom">6dp</item>
  </style>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/navy_blue</item>
    <item name="colorPrimaryDark">@color/dark_navy_blue</item>
    <item name="android:windowBackground">@color/grey_light</item>
  </style>

  <style name="LoginScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/navy_blue</item>
    <item name="colorPrimaryDark">@color/dark_navy_blue</item>
    <item name="android:windowBackground">@color/dark_navy_blue</item>
  </style>
</resources>
